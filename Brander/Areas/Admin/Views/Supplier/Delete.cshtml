@model Supplier
@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-white">Eliminar Proveedor</h2>
<br />


<form method="post" asp-action="Delete">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CompanyName" class="col-form-label"></label>
            </div>          
            <div class="col-5">
                <input asp-for="CompanyName" class="form-control" />
            </div>           
        </div>

        <div class="form-group row">          
            <div class="col-2">
                <label asp-for="Email" class="col-form-label"></label>
            </div>         
            <div class="col-5">
                <input asp-for="Email" class="form-control" />
            </div>          
        </div>

        <div class="form-group row">          
            <div class="col-2">
                <label asp-for="Country" class="col-form-label"></label>
            </div>           
            <div class="col-5">
                <input asp-for="Country" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <partial name="_DeleteAndBackToListButton" model="Model.Id" />
        </div>

    </div>
</form>


