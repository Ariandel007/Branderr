@*Primeri añadimos el modelo:*@

@model Category
@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-white">Crear Categoria</h2>
<br />

@*Indicamos en el metodo el verbo que se relizara(en este caso un post)*@
<form method="post" asp-action="Create">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            @*Aca mostrara un label del nombre selecionado en el display de la columna Name de la tabla Category*@
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            @*Aca se recibira un parametro que llenara a la columna Name de la tabla Category*@
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
            @*Aqui nos mostrara un mensaje de error si lo ingresado no cumple con la valsiacion*@
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                @*Llamamos al partial view*@
                <partial name="_CreateAndBackToListButton" model="Model" />
            </div>
        </div>

    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}