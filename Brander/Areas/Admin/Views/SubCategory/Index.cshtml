@*Siempre hay que fijarnos que parte del modelo vamos a suar*@
@model IEnumerable<SubCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Lista de Sub Categoria</h2>
        </div>
        <div class="col-6 text-right">
            @*Llamando a la partial view*@
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />

    <div>
        @*El Count() sirve para saber si tabla esta vacio o no*@
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @*para mostara el nombre de la columna asigando(aca lo cambie el modelo con un [DisplaName])*@
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @*para mostara el nombre de la columna asigando(aca lo cambie el modelo con un [DisplaName])*@
                        @Html.DisplayNameFor(m => m.Category.Name)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @*Para mostrar el contenido de la columna*@
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @*Para mostrar el contenido de la columna*@
                            @Html.DisplayFor(m => item.Category.Name)
                        </td>
                        @*Llamamos al partial view que tiene las opciones de edicion,detalles y eliminacion y con el tag model le pasamos la id*@
                        <td>
                            <partial name="_TableButtonpartial" model="item.Id" />
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <div>
                <p>
                    No existe ninguna sub categoria
                </p>
            </div>
        }
    </div>
</div>