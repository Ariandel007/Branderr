@model IEnumerable<Stock>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<div class="border container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-white">Lista de Stock</h2>
        </div>
        <div class="col-6 text-right">
            @*Llamando a la partial view*@
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />

    <div>
        @*El Count() sirve para saber si tabla esta vacio o no*@
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border table-light">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Region)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Supplier.CompanyName)
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Region)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Supplier.CompanyName)
                        </td>
                        @*Llamamos al partial view que tiene las opciones de edicion,detalles y eliminacion y con el tag model le pasamos la id*@
                        <td>
                            <partial name="_TableButtonpartial" model="item.Id" />
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <div class="text-light">
                <p>
                    No existe ningun stock
                </p>
            </div>
        }
    </div>
</div>

