@model IEnumerable<Game>


@if (Model.Count() > 0)
{
    <div class="col-12 post @Model.FirstOrDefault().Category.Name.Replace(" ",string.Empty)">
        <div class="box colored tournament-partner">
            <h3 class="text-white"> @Model.FirstOrDefault().Category.Name </h3>
        </div>
        <div class="box">
        @foreach (var item in Model)
        {
            <article class="post" style="margin-bottom:10px; margin-top:10px; padding:10px">
                <div class="post-body">
                    <div class="col-md-3 col-sm-12">
                        <img class="img-responsive" src="@item.Image" width="99%" style="border-radius:5px;border:1px solid #bbb9b9" />
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <div class="row pr-3">
                            <div class="col-8">
                                <label class="text-white" style="font-size:21px;color:maroon">@item.Name</label>

                            </div>
                            <div class="post-date-wrapper" style="color:maroon">
                                <div class="post-date">
                                    <div class="day">$@item.Price</div>
                                </div>
                            </div>
                        </div>


                        <div class="post-info">
                            <p>@Html.Raw(item.Description)</p>
                        </div>
                        <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                            <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Detalles</a>
                        </div>
                    </div>
                </div>
            </article>
        }
        <div class="p-4"></div>
            </div>
    </div>
}